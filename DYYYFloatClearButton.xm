                    dispatch_async(dispatch_get_main_queue(), ^{
                        UIViewController *controller = [hideButton findViewController:view];
                        if ([controller isKindOfClass:NSClassFromString(@"AWEFeedContainerViewController")]) {
                            view.alpha = 0.0;
                        }
                    });
                    break;
                }
                view.alpha = 0.0;
                break;
            }
        }
    }
    return view;
}
